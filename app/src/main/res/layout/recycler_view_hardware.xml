<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hardware_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hardware_image"
        android:layout_width="143dp"
        android:layout_height="255dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/pc1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hardware_name_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:text="PC1"
        android:layout_marginEnd="12dp"
        app:layout_constraintStart_toStartOf="@+id/hardware_detail_textview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hardware_detail_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Detail"
        android:layout_marginEnd="12dp"
        android:maxLines="4"
        app:layout_constraintStart_toEndOf="@+id/hardware_image"
        app:layout_constraintTop_toBottomOf="@+id/hardware_name_textview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        />

</android.support.constraint.ConstraintLayout>